FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port (if needed for health checks)
EXPOSE 3000

# Health check
HEALTHCHECK --interval=60s --timeout=10s --start-period=20s --retries=3 \
  CMD node -e "console.log('Relayer health check passed')" || exit 1

# Default command (can be overridden)
CMD ["node", "relayer.js"]
